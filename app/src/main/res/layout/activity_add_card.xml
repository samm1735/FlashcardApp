    <EditText
        android:id="@+id/add_card_question_field"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:hint="Add your flash card question here"
        />

    <EditText
        android:id="@+id/add_card_answer1_field"
        android:layout_below="@+id/add_card_question_field"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:hint="Add your flash card answer here"
        />


    <ImageView
        android:id="@+id/cancel_card_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iconmonstr_x_mark_circle_lined"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        />

    <ImageView
        android:id="@+id/save_card_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iconmonstr_save_13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        />


</RelativeLayout>